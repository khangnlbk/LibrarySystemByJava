<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookManager.Controller.BrowseBookPaneController">
	<center>
		<BorderPane prefHeight="522.0" prefWidth="800.0" BorderPane.alignment="CENTER">
			<center>
				<TableView fx:id="browseBookTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
					<columns>
						<TableColumn fx:id="bookidCol" prefWidth="75.0" text="Book ID" />
						<TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
						<TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
						<TableColumn fx:id="publisherCol" prefWidth="75.0" text="Publisher" />
						<TableColumn fx:id="categoryCol" prefWidth="75.0" text="Category" />
						<TableColumn fx:id="isbnCol" prefWidth="75.0" text="ISBN" />
                  <TableColumn fx:id="discriptionCol" prefWidth="75.0" text="Discription" />
                  <TableColumn fx:id="priceCol" prefWidth="75.0" text="Price" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</center>
		</BorderPane>
	</center>
   <top>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="searchTextField" prefHeight="25.0" prefWidth="276.0" promptText="Search..." BorderPane.alignment="CENTER" />
            <ComboBox fx:id="optionBox" prefHeight="25.0" prefWidth="100.0" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchBook" text="Search" />
         </children>
      </HBox>
   </top>
</BorderPane>
