<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookManager.Controller.BrowseCopyPaneController">
	<center>
		<BorderPane prefHeight="522.0" prefWidth="800.0" BorderPane.alignment="CENTER">
			<center>
				<TableView fx:id="browseCopyTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
					<columns>
						<TableColumn fx:id="copyIdCol" prefWidth="75.0" text="Copy ID" />
						<TableColumn fx:id="bookIdCol" prefWidth="75.0" text="Book ID" />
						<TableColumn fx:id="copyNumberCol" prefWidth="75.0" text="Copy Number" />
						<TableColumn fx:id="statusCol" prefWidth="75.0" text="Status" />
						<TableColumn fx:id="priceCol" prefWidth="75.0" text="Price" />
						<TableColumn fx:id="copyConditionCol" prefWidth="75.0" text="Copy Condition" />
                  <TableColumn fx:id="copyTypeCol" prefWidth="75.0" text="Copy Type" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</center>
		</BorderPane>
	</center>
   <top>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="searchTextField" prefHeight="25.0" prefWidth="276.0" promptText="Search..." BorderPane.alignment="CENTER" />
            <ComboBox fx:id="optionBox" prefHeight="25.0" prefWidth="100.0" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchBook" text="Search" />
         </children>
      </HBox>
   </top>
</BorderPane>
