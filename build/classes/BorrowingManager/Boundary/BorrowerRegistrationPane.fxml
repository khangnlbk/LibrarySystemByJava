<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BorrowingManager.Controller.BorrowerRegistrationPaneController">
   <center>
      <TableView fx:id="bookTable" prefHeight="449.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="bookidCol" prefWidth="75.0" text="Book ID" />
          <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
            <TableColumn fx:id="publisherCol" prefWidth="75.0" text="Publisher" />
            <TableColumn fx:id="categoryCol" prefWidth="75.0" text="Category" />
            <TableColumn fx:id="isbnCol" prefWidth="75.0" text="ISBN" />
            <TableColumn fx:id="discriptionCol" prefWidth="75.0" text="Discription" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="46.0" prefWidth="800.0">
         <children>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#sendRegistration" text="Confirm" BorderPane.alignment="CENTER" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
