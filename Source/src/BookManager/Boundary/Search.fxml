<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="searchTextField" prefHeight="25.0" prefWidth="276.0" promptText="Search..." BorderPane.alignment="CENTER" />
            <ComboBox fx:id="optionBox" prefHeight="25.0" prefWidth="100.0" />
            <Button fx:id="searchButton" mnemonicParsing="false"  text="Search" />
         </children>
      </HBox>
   </top>
   <bottom>
       <fx:include fx:id="display" source="BooksDisplay.fxml" />
   </bottom>
</BorderPane>
