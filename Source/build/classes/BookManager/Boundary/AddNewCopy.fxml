<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<Pane prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
			<children>
				<BorderPane prefHeight="552.0" prefWidth="800.0">
					<top>
						<Label prefHeight="67.0" prefWidth="232.0" text="Add New Copy" textAlignment="CENTER" BorderPane.alignment="CENTER">
							<font>
								<Font name="System Bold" size="28.0" />
							</font>
						</Label>
					</top>
					<center>
						<GridPane alignment="CENTER" prefHeight="486.0" prefWidth="800.0" BorderPane.alignment="CENTER">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
									<children>
										<TextField fx:id="bookNumber" prefHeight="25.0" prefWidth="215.0" />
									</children>
								</HBox>
								<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
									<children>
										<Label text="Book Number" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="24.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
									<children>
										<Label text="Number Of New Copies" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="24.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="3">
									<children>
										<TextField fx:id="quantity" prefHeight="25.0" prefWidth="215.0" />
									</children>
								</HBox>
								<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4">
									<children>
										<Label text="Price" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="24.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="5">
									<children>
										<TextField fx:id="price" prefHeight="25.0" prefWidth="215.0" />
									</children>
								</HBox>
								<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="8">
									<children>
										<Label text="Type of Copy" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="24.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="9">
									<children>
										<ComboBox fx:id="typeOfCopy" prefHeight="25.0" prefWidth="215.0" />
									</children>
								</HBox>
								<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="6">
									<children>
										<Label text="Condition" textAlignment="CENTER">
											<font>
												<Font name="System Bold" size="24.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="7">
                           <children>
                              <TextField fx:id="condition" prefHeight="25.0" prefWidth="215.0" />
                           </children>
								</HBox>
							</children>
						</GridPane>
					</center>
					<bottom>
						<Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" prefHeight="41.0" prefWidth="83.0" text="Submit" BorderPane.alignment="CENTER" />
					</bottom>
				</BorderPane>
			</children>
		</Pane>
	</center>
</BorderPane>
